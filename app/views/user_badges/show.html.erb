<div class="wrapper">
  <h1 class='badge-name text-center'><%= @userbadge.badge.name.upcase %></h1>
  <div id="accordion">
    <% @userbadge.badge.objectives.each do |objective| %>
      <div class="objective">
        <div class="accordion-toggle">
          <p class="objective-name"><%= objective.name  %></p>
          <i class='fa fa-check-circle-o <%= done_class(objective) %>'></i>
        </div>
        <div class='accordion-content'>
          <p> <%= objective.description %></p>
            <% if UserObjective.find_by(user_badge_id: @userbadge.id, objective_id: objective.id) == nil %>
              <%= link_to user_badge_user_objectives_path(@userbadge, objective_id: objective), method: :post do %>
                <button type="button" class="btn btn-primary">J'ai réalisé ce défi !</button>
              <% end %>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
      </div>
      <div class="modal-body">
        <% @userbadges.each_with_index do |userbadge, index| %>
          <%= render 'icon_container', value: userbadge.badge.id, progression: nil, index: index %>
        <% end %>
        <h3 class='text-center'>
          Félicitations !
          Vous venez de débloquer le badge : <%= @userbadge.badge.name %>
        </h3>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-modal" data-dismiss="modal">Ajouter ce badge !</button>
      </div>
    </div>
  </div>
</div>

<!-- JS -->
<script type="text/javascript">
  $(document).ready(function($) {
    $('#accordion').find('.accordion-toggle').click(function(){

      //Expand or collapse this panel
      $(this).next().slideToggle('fast');

      //Hide the other panels
      $(".accordion-content").not($(this).next()).slideUp('fast');

    });
  });
</script>
