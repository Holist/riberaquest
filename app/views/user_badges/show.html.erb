<div class="container-fluid" id="userbadgeshow">
  <div class="row" id="header-background">
    <div class="col-7 mb-5">
      <%= link_to user_badges_path do %>
        <%= image_tag "chevronleft.svg", height: "20px;", class: "mt-4" %>
      <% end %>
      <h1 id="title"><%= @userbadge.badge.name %></h1>
      <p>Objectifs :</p>
    </div>
    <div class="col-5">
      <%= image_tag @userbadge.badge.icon_name, height: "100%" %>
    </div>
  </div>

  <div class="row" id="badges-cards">
   <div class="col-12 " id="accordion">
    <%= render 'user_objectives/accordion_index' %>
  </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
      </div>
      <div class="modal-body">
        <div class="modal-icon">
          <%= render 'icon_container', value: @userbadge.badge.id, progression: nil, index: 0 %>
        </div>
        <h3 class='text-center'>
          Félicitations !
          Vous venez de débloquer le badge : <%= @userbadge.badge.name %>
        </h3>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-modal" data-dismiss="modal">Ajouter ce badge !</button>
      </div>
    </div>
  </div>
</div>
