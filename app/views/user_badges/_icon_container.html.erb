<% array_of_icons = %w(curd.svg forest.svg bicycle.svg) %>
<div class="badge-icon-container d-flex align-items-center pr-1 pl-4" data-progress="<%= progression %>">
  <svg width="80" height="80" id="badgeicon<%= value %>">
      <defs>
          <clipPath id="circleView">
            <circle cx="40" cy="40" r="40" fill="#FFFFFF" />
          </clipPath>
      </defs>
    <image width="80" height="80" xlink:href="<%= image_url(array_of_icons[index]) %>" clip-path="url(#circleView)" transform="scale(-1, -1) translate(-80, -80)" />
  </svg>
</div>
