<div class="container-fluid">
  <div class="row">
    <div class="col-12 text-center">
      <h1><%= @user.email %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <p>badges :</p>
    </div>
    <% @userbadges.each do |userbadge| %>
      <div class="col-12">
        <%= link_to user_badge_path(userbadge), class: "card" do %>
          <div class="card-body">
            <h4 class="card-title"><%= userbadge.badge.name %></h4>
            <p class="card-text"><%= userbadge.badge.objectives.first.description %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
